<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>NewGame</servlet-name>
        <servlet-class>chess.NewGame</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GiveUp</servlet-name>
        <servlet-class>chess.GiveUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckMove</servlet-name>
        <servlet-class>chess.CheckMove</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewGame</servlet-name>
        <url-pattern>/newgame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GiveUp</servlet-name>
        <url-pattern>/giveup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckMove</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
